{
    "name": "watch-run",
    "displayName": "watch-run",
    "description": "This extension monitors files in workspace and run a task when a file is changed",
    "version": "0.6.0",
    "publisher": "boukichi",
    "engines": {
        "vscode": "^1.87.0"
    },
    "keywords": [
        "multi-root ready"
    ],
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:watch-run.getFilename",
        "workspaceContains:.vscode/settings.json"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/BouKiCHi/vscode-watch-run.git"
    },
    "license": "MIT",
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "watch-run.applySettings",
                "title": "Apply Settings",
                "category": "watch-run"
            }
        ],
        "configuration": [
            {
                "title": "watch-run",
                "properties": {
                    "watch-run.targetList": {
                        "type": "array",
                        "description": "Array of Target and Task.",
                        "default": [
                            {
                                "target": "**/*.html",
                                "task": "show_html"
                            }
                        ],
                        "items": {
                            "type": "object",
                            "title": "Task",
                            "default": {
                                "target": "**/*.html",
                                "task": "show_html"
                            },
                            "properties": {
                                "target": {
                                    "type": "string",
                                    "default": "**/*.html",
                                    "description": "Pattern to find a file or directory. glob pattern available."
                                },
                                "task": {
                                    "type": "string",
                                    "default": "show_html",
                                    "description": "Run the Label of Task when Target is changed."
                                },
                                "regexp": {
                                    "type": "string",
                                    "default": ".*",
                                    "description": "regular expression to find a file or directory."
                                }
                            }
                        }
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "^22.15.12",
        "@types/vscode": "^1.99.1",
        "@typescript-eslint/eslint-plugin": "^8.32.0",
        "@typescript-eslint/parser": "^8.32.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.5.2",
        "eslint": "^9.26.0",
        "typescript": "^5.8.3"
    },
    "dependencies": {
        "glob-to-regexp": "^0.4.1",
        "mkdirp": "^3.0.1",
        "node-watch": "^0.7.4"
    }
}