{
    "name": "watch-run",
    "displayName": "watch-run",
    "description": "This extension monitors files in workspace and run a task when a file is changed",
    "version": "0.5.1",
    "publisher": "boukichi",
    "engines": {
        "vscode": "^1.24.0"
    },
    "keywords": [
        "multi-root ready"
    ],
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:watch-run.getFilename",
        "onCommand:watch-run.applySettings",
        "workspaceContains:.vscode/settings.json"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/BouKiCHi/vscode-watch-run.git"
    },
    "license": "MIT",
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "watch-run.applySettings",
                "title": "Apply Settings",
                "category": "watch-run"
            }
        ],
        "configuration": [
            {
                "title": "watch-run",
                "properties": {
                    "watch-run.targetList": {
                        "type": "array",
                        "description": "Array of Target and Task.",
                        "default": [
                            {
                                "target": "**/*.html",
                                "task": "show_html"
                            }
                        ],
                        "items": {
                            "type": "object",
                            "title": "Task",
                            "default": {
                                "target": "**/*.html",
                                "task": "show_html"
                            },
                            "properties": {
                                "target": {
                                    "type": "string",
                                    "default": "**/*.html",
                                    "description": "Pattern to find a file or directory. glob pattern available."
                                },
                                "task": {
                                    "type": "string",
                                    "default": "show_html",
                                    "description": "Run the Label of Task when Target is changed."
                                },
                                "regexp": {
                                    "type": "string",
                                    "default": ".*",
                                    "description": "regular expression to find a file or directory."
                                }
                            }
                        }
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.7.4",
        "tslint": "^5.19.0",
        "typescript": "^3.6.2",
        "vscode": "^1.1.36"
    },
    "dependencies": {
        "glob-to-regexp": "^0.4.1",
        "mkdirp": "^0.5.1",
        "node-watch": "^0.6.3"
    }
}
