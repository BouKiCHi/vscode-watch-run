{
    "name": "watch-run",
    "displayName": "watch-run",
    "description": "Monitor files and directories and execute tasks when changed",
    "version": "0.3.1",
    "publisher": "boukichi",
    "engines": {
        "vscode": "^1.24.0"
    },
    "keywords": [
        "multi-root ready"
    ],
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/BouKiCHi/vscode-watch-run.git"
    },
    "license": "MIT",
    "main": "./out/extension",
    "contributes": {
        "configuration": [
            {
                "title": "watch-run configuration / restart is required to apply changes",
                "properties": {
                    "watch-run.targetList": {
                        "type": "array",
                        "description": "Array of Target and Task.",
                        "items": {
                            "type": "object",
                            "title": "Task",
                            "default": {},
                            "properties": {
                                "target": {
                                    "type": "string",
                                    "default": "**/*.txt",
                                    "description": "Target files or directories. glob pattern available."
                                },
                                "task": {
                                    "type": "string",
                                    "default": "echo",
                                    "description": "Run the Label of Task when Target is changed."
                                },
                                "command": {
                                    "type": "string",
                                    "default": "",
                                    "description": "Run the command of vscode internal."
                                }
                            }
                        }
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.7",
        "@types/node": "^10.14.9",
        "tslint": "^5.17.0",
        "typescript": "^3.5.2",
        "vscode": "^1.1.34"
    },
    "dependencies": {
        "glob-to-regexp": "^0.4.1",
        "mkdirp": "^0.5.1",
        "node-watch": "^0.6.2"
    }
}
